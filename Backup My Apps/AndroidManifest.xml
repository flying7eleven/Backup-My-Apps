<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.halcyonwaves.apps.backupmyapps"
      android:versionCode="30"
      android:versionName="0.5">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7" android:maxSdkVersion="14" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/applicationName">
    	<service android:name=".BackupService" android:enabled="true" android:label="@string/applicationBackupServiceName" />
        <activity android:name=".MainActivity"
                  android:label="@string/applicationName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RestoreSelectionActivity">
            <intent-filter></intent-filter>
        </activity>
        <activity android:name=".SettingsActivity">
            <intent-filter></intent-filter>
        </activity>
    </application>
</manifest>