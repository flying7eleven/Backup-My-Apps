<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.halcyonwaves.apps.backupmyapps"
      android:versionCode="11"
      android:versionName="0.3.1">
    <uses-sdk android:minSdkVersion="7" android:maxSdkVersion="10" android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:icon="@drawable/icon" android:label="@string/applicationName">
        <activity android:name=".MainActivity"
                  android:label="@string/applicationName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RestoreSelectionActivity">
            <intent-filter></intent-filter>
        </activity>

    </application>
</manifest>